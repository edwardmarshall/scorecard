= form_for(@point) do |f|
  - if @point.errors.any?
    #error_explanation
      %h2
        = pluralize(@point.errors.count, "error")
        prohibited this point from being saved:
      %ul
        - @point.errors.full_messages.each do |msg|
          %li = msg

  .field
    = f.hidden_field :antler_id
  
  .field
    = f.label :lg_point
    = f.text_field :lg_point_whole
    &
    = f.select :lg_point_fraction, [["0/8",0],["1/8","1"],["2/8","2"],["3/8","3"],["4/8","4"],["5/8","5"],["6/8","6"],["7/8", "7"]]
    inches

  .actions
    = f.submit
    or
    = link_to 'Cancel', "#", :class => 'cancelPoint', :'data-point_url' => point_url(@point)
