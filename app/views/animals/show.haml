%p#notice


%table
  %tr
    %th Kind:
    %td= @animal.kind
  %tr
    %th Alias:
    %td= @animal.alias
  %tr
    %th Image:
    %td= @animal.image
  %tr
    %th State:
    %td= @animal.state
  %tr
    %th Tip to Tip Spread:
    %td= "#{@animal.spread_tip.to_i / 8} #{@animal.spread_tip.to_i % 8}/8 in"
  %tr
    %th Greatest Spread:
    %td= "#{@animal.spread_greatest.to_i / 8} #{@animal.spread_greatest.to_i % 8}/8 in"
  %tr
    %th Inside Spread:
    %td= "#{@animal.spread_inside.to_i / 8} #{@animal.spread_inside.to_i % 8}/8 in"
  %tr
    %th Right Antler:
    %td= "#{@animal.right_antler.lg_antler.to_i / 8} #{@animal.right_antler.lg_antler.to_i % 8}/8 in"
  %tr
    %th Left Antler:
    %td= "#{@animal.left_antler.lg_antler.to_i / 8} #{@animal.left_antler.lg_antler.to_i % 8}/8 in"

%br
= link_to "Edit", edit_animal_path(@animal)
|
= link_to "Close", animals_path










