<%= form_for(@animal) do |f| %>
  <% if @animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
      <% @animal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :kind %><br />
    <%= f.select :kind, [["Mule Deer", "Mule Deer"],["White Tail Deer", "White Tail Deer"],["Rocky Mountain Elk", "Rocky Mountain Elk"]] %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.select :state, [["AZ - Arizona", "AZ"],["CA - California", "CA"],["CO - Colorado", "CO"],["ID - Idaho", "ID"],["MT - Montana","MT"],["NV - Nevada", "NV"],["UT - Utah", "UT"],["WY - Wyoming", "WY"]] %>
  </div>
  <div class="field">
    <%= f.label :region %><br />
    <%= f.select :region, [["Northern", "Northern"],["Central", "Central"],["Southern","Southern"]] %>
  </div>
  <div class="field">
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </div>
  <div class="field">
    <%= f.label :hunter %><br />
    <%= f.text_field :hunter %>
  </div>
  <div class="field">
    <%= f.label :spread_tip %><br />
    <%= f.number_field :spread_tip %> <%= f.number_field :spread_tip %>/8
  </div>
  <div class="field">
    <%= f.label :spread_greatest %><br />
    <%= f.number_field :spread_tip %> <%= f.number_field :spread_tip %>/8
  </div>
  <div class="field">
    <%= f.label :spread_inside %><br />
    <%= f.number_field :spread_tip %> <%= f.number_field :spread_tip %>/8
  </div>
  <div class="field">
    <%= f.label :alias %><br />
    <%= f.text_field :alias %> e.g. "The Buck of Justice"
  </div>
  <div class="field">
    <%= f.label :certification %><br />
    <%= f.text_field :certification %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
